<!DOCTYPE html>
<html>
  <head>
    <title>Adopt Don't Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <% flash.each do |type, message| %>
      <p><%= message %></p>
  <% end %>

  <body>
    <div class="container">
      <header>
        <div id="favorites">
          <p>Favorites: 0 </p>
        </div>
        <nav>
          <%= link_to "Home", "/" %> |
          <%= link_to "Shelter Index", "/shelters" %> |
          <%= link_to "Pet Index", "/pets" %>
        </nav>
      </header>
      <% flash.each do |_, message| %>
        <p><%= message %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
