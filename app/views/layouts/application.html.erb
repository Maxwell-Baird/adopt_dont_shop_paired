<!DOCTYPE html>
<html>
  <head>
    <title>Adopt Don't Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <header>
        <div id="favorites">
          <%= link_to "Favorites: #{@favorites == nil ? 0 : @favorites.count_of}", "/favorites" %>
        </div>
        <nav>
          <%= link_to "Home", "/" %> |
          <%= link_to "Shelter Index", "/shelters" %> |
          <%= link_to "Pet Index", "/pets" %>
        </nav>
      </header>
      <% flash.each do |type, message| %>
        <section class=<%= type %>>
          <p><%= message %></p>
        </section>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
